<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">公告列表</h3>
    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>公告标题</th>
          <th>公告内容</th>
          <th>显示顺序</th>
          <th>at</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @newsblasts.each do |newsblast| %>
          <tr>
            <td><%= link_to newsblast.id, [:cpanel, newsblast] %></td>
            <td><%= newsblast.title %></td>
            <td><%= newsblast.body %></td>
            <td><%= newsblast.sort %></td>
            <td><%= newsblast.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td>
              <%= link_to '编辑', edit_cpanel_newsblast_path(newsblast), class: "btn btn-xs btn-default" %>
              <% if current_user.super_manager? %>
              <%= link_to '删除', [:cpanel, newsblast], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>

<%= link_to '新建公告', new_cpanel_newsblast_path, class: "btn btn-primary" %>

