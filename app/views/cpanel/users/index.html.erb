<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">用户列表</h3>
    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>手机</th>
          <th>配送地址</th>
          <th>配送时间</th>
          <th>注册时间</th>
          <th>最后登录时间</th>
          <th>登录次数</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.mobile %></td>
            <td><%= user.deliver_address %></td>
            <td><%= user.deliver_time %></td>
            <td><%= user.created_at %></td>
            <td><%= user.last_sign_in_at %></td>
            <td><%= user.sign_in_count %></td>
            <td>
              <% if current_user.admin? %>
              <%= state_link_to state: user.verified,
                                yes_uri: "/cpanel/users/#{user.id}/block", 
                                yes_text: "禁用",
                                no_uri: "/cpanel/users/#{user.id}/unblock",
                                no_text: "启用" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="center"><%= will_paginate @users, renderer: BootstrapPagination::Rails %></div>
  
</div>