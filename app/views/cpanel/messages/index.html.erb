<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">留言列表</h3>
    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>留言标题</th>
          <th>留言内容</th>
          <th>留言时间</th>
          <th>留言人</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td><%= message.id %></td>
            <td><%= message.title %></td>
            <td><%= message.body %></td>
            <td><%= message.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= message.user_mobile %></td>
            <td>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="center"><%= will_paginate @messages, renderer: BootstrapPagination::Rails %></div>
  
</div>

