<%= simple_form_for([:cpanel, @sale], html: { class: "form-horizontal" },wrapper: :horizontal_form,
        wrapper_mappings: {
          check_boxes: :horizontal_radio_and_checkboxes,
          radio_buttons: :horizontal_radio_and_checkboxes,
          file: :horizontal_file_input,
          boolean: :horizontal_boolean
        }) do |f| %>
  <%= render "/shared/error_messages", target: @sale %>

  <div class="col-md-6 col-md-offset-3">
    <%= f.input :title, label: "卖场标题", placeholder: "苹果专卖" %>
    
    <%- if @sale.cover_image.small %>
      <div class="col-sm-10 col-sm-offset-3">
        <%= image_tag @sale.cover_image.small if @sale.cover_image.small.present?  %>
      </div>
    <%- end %>
    <%= f.input :cover_image, label: "卖场封面" %>
    <%= f.hidden_field :cover_image_cache %>
    
    <%= f.input :subtitle, label: "卖场子标题", placeholder: "全场129元起" %>
    
    <%= f.input :background_color, label: "卖场背景颜色", placeholder: "#000000" %>
    <%= f.input :closed_at, as: :string, label: "活动截止时间", placeholder: "2015-01-01 00:00:00" %>
    
    <%- if @sale.ad_image.ad_small %>
      <div class="col-sm-10 col-sm-offset-3">
        <%= image_tag @sale.ad_image.ad_small if @sale.ad_image.ad_small.present?  %>
      </div>
    <%- end %>
    <%= f.input :ad_image, label: "卖场广告" %>
    <%= f.hidden_field :ad_image_cache %>
    
    <%- if @sale.logo.logo_small %>
      <div class="col-sm-10 col-sm-offset-3">
        <%= image_tag @sale.logo.logo_small if @sale.logo.logo_small.present?  %>
      </div>
    <%- end %>
    <%= f.input :logo, label: "卖场Logo" %>
    <%= f.hidden_field :logo_cache %>
      
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-10">
        <%= f.submit "提交", class: "btn btn-primary", 'data-disable-with' => "正在提交..." %>&emsp;<%= link_to '返回', cpanel_sales_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>

  
<% end %>
